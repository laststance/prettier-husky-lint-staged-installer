{
  "compilerOptions": {
    "allowJs": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "Bundler",
    "outDir": "lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "./**.js",
    "./**.ts",
    "./**.cjs",
    "./**.mjs",
    "bin",
    "test",
    ".eslintrc.cjs",
    "tsup.config.ts",
    "vitest.config.ts"
  ]
}
